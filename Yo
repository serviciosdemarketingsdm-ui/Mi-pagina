    document.getElementById('loginForm').addEventListener('submit', function(e){
      e.preventDefault();
      document.getElementById('loginStatus').textContent = 'Iniciando sesión...';
      setTimeout(()=> location.href = 'dashboard.html', 700);
    });
    document.getElementById('demoBtn').addEventListener('click', ()=> location.href = 'dashboard.html');
  </script>
